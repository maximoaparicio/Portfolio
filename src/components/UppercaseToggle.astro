<button
  id="uppercase-toggle"
  class="hover:scale-125 hover:opacity-70 duration-150"
>
  Aa</button
>

<script>
  const toggle = document.getElementById("uppercase-toggle");

  function toggleUppercase() {
    const element = document.documentElement;
    element.classList.toggle("uppercase");
  }

  toggle?.addEventListener("click", toggleUppercase);
</script>
